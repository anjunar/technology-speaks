{
  "compilerOptions": {
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "target": "ES5",
    "module": "CommonJS",
    "moduleResolution": "node",
    "lib": ["dom", "dom.iterable", "esnext"],
    "noImplicitAny": false,
    "resolveJsonModule": true,
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "strictNullChecks": false,
    "outDir": "build",
    "esModuleInterop" : true,
    "jsx": "react",
    "sourceMap": true,
    "allowSyntheticDefaultImports": true
  },
  "include": ["src",
    "server.tsx"
  ]
}